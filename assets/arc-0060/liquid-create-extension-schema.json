{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://arcs/60/liquid-create-extension",
    "title": "Liquid Auth Webauthn Create Extension",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "Type of authentication strategy"
        },
        "address": {
            "type": "string",
            "description": "Encoded Algorand address to authenticate with"
        },
        "signature": {
            "type": "string",
            "description": "Base64 URL encoded signature of the FIDO2/Webauthn challenge"
        },
        "requestId": {
            "type": "string",
            "description": "Optional, requestId is used to authenticate a remote peer"
        },
        "device": {
            "type": "string",
            "description": "Optional, name for the device"
        }
    },
    "required": ["type", "address", "signature"],
    "additionalProperties": false
}